<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Showcase</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      		/WEB-INF/service.xml
      		/WEB-INF/security.xml      
   		</param-value>
  </context-param>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>ru.curs.showcase.app.server.AppAndSessionEventsListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
  </listener>  

   <filter>
    <filter-name>CheckAutenticationFilter</filter-name>
    <filter-class>ru.curs.showcase.security.CheckAutenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckAutenticationFilter</filter-name>
    <url-pattern>/secured/*</url-pattern>
  </filter-mapping>  

   <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>   
 

  <filter>
    <filter-name>SessionInfoFilter</filter-name>
    <filter-class>ru.curs.showcase.app.server.SessionInfoFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionInfoFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>DataServiceImpl</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.DataServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DataServiceImpl</servlet-name>
    <url-pattern>/secured/data</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GridToExcel</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.FilesFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GridToExcel</servlet-name>
    <url-pattern>/secured/gridToExcel</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Download</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.FilesFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Download</servlet-name>
    <url-pattern>/secured/download</url-pattern>
  </servlet-mapping>  
  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.FilesFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/secured/upload</url-pattern>
  </servlet-mapping>    
  <servlet>
    <servlet-name>XFormsSubmissionServlet</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.XFormsSubmissionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>XFormsSubmissionServlet</servlet-name>
    <url-pattern>/secured/submit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SelectorDataService</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.SelectorDataServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SelectorDataService</servlet-name>
    <url-pattern>/secured/SelectorDataService</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>isAuthenticatedServlet</servlet-name>
    <servlet-class>ru.curs.showcase.security.ShowcaseIsAuthenticatedServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>isAuthenticatedServlet</servlet-name>
    <url-pattern>/auth/isAuthenticatedServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>ru.curs.showcase.security.ShowcaseLogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/auth/logoutServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>XFormsTransformationServlet</display-name>
    <servlet-name>XFormsTransformationServlet</servlet-name>
    <servlet-class>ru.curs.showcase.app.server.XFormsTransformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>XFormsTransformationServlet</servlet-name>
    <url-pattern>/secured/xslttransformer</url-pattern>
  </servlet-mapping>
</web-app>